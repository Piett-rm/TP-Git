pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat "type *.md > index.html"
            }
        }

        stage('Delivery') {
            steps {
                archiveArtifacts artifacts: 'index.html', followSymlinks: false
            }
        }

        stage('Build Image') {
            steps {
                bat "docker build -t some-content-nginx ."
            }
        }

        stage('Run Docker') {
            steps {
                bat "docker run --name some-nginx -d -p 8081:80 some-content-nginx"
            }
        }
    }
}
