pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo  'hello le monde'
            }
        }
        stage('Doc') {
            steps {
                sh  'cat *.md > FeatureManual.md'
            }
        }
        stage('Store') {
            steps {
                sh  'mv FeatureManual.md Dockerfile_hugo/FeatureManual.md'
            }
        }
        stage('Docker Build') {
            steps {
                sh  'docker build -t readmefy ./Dockerfile_hugo'
            }
        }
    }
}

