pipeline {
    agent any

    stages {
        stage('Combining README files') {
            steps {
                script {
                    bat 'type README* > combined_readme.md'
                }
            }

             post {
                success {
                    archiveArtifacts 'combined_readme.md'
                }
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    bat 'docker build - < Dockerfile_Pierre'
                }
            }

        }
        
    }
}